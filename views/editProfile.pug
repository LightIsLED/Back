doctype html
head
    title Mediger
    style(type="text/css").
        li{
            background-color: lightgray;
            background-position: center;
            text-align: center;
            color: rgb(0,157,254);
            border-radius: 15px;
            height: 30px;
            width: 80%;
            margin: auto;
            margin-top: 30px;
        }
        .add{
            margin: auto;
            width: 80%; 
        }
        .add input{
            background-color: rgb(0,157,254);
            color: white;
            text-align: center;
            border-radius: 15px;
            background-position: center;
            height: 30px;
            width: 95%;
            margin-left: 8%;
            margin-top: 30px;
            border:none;
        }
        ul{
            list-style:none;
        }
        hr{
            background-color: lightgray;
            width: 100%;
            height: 2px;
        }
    script.
        function accomAppend(form){
            append = document.getElementById("appendAccom");
            append.innerHTML += "<br>accompanier Name: <input type=text name=accompanierName><br>"
            append.innerHTML += "accompanier Phone: <input type=text name=accompanierPhone><br>"
        }
body
    .header
        h1(style="color: rgb(0,157,254); text-align: center") Mediger
    .userInfo
        form(action="/user/edit", method="post")
            ul
                li="이름    "+user.userName
                li="생년월일    "+user.birth
                if(user.sex === 0)
                    li="성별    남자"
                else
                    li="성별    여자"
                div#appendAccom
                    input(type="button", value="accompanier info edit", onclick="accomAppend(this.form)")
                input(type="submit", value="update")
    .add
        form(action="/user/edit", method="post")
            input(type="submit", value="등록")
    .footer
        include footer.pug